#!/bin/bash

PATHDIR=/sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode

if [[ $1 == "" ]]; then
    if [[ `cat $PATHDIR` == "1" ]]; then
        echo "conservation_mode active âœ…"
    else
        echo "conservation_mode inactive âŒ"
    fi
    echo
    echo "USAGE: conmode set 0/1"
elif [[ $1 == "set" ]]; then
    
    [ "$UID" -eq 0 ] || exec sudo "$0" "$@"

    if [[ $2 == "0" ]]; then
        echo "0" > $PATHDIR
        echo "ðŸ†—"
    elif [[ $2 == "1" ]]; then
        echo "1" > $PATHDIR
        echo "ðŸ†—"
    else
        echo "Please input 1 or 0"
    fi

fi

